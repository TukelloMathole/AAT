@page "/"
@inject NavigationManager Navigation
@inject ApiService ApiService
@using EventRegistrationApp.Models

<PageTitle>Event Registration</PageTitle>

<div class="bg-gray-50 min-h-screen flex flex-col">
    <main class="flex-grow px-1">

        <section class="relative bg-cover bg-center h-[50vh]" style="background-image: url('/event.jpg');">
            <div class="absolute inset-0 bg-black opacity-50"></div>
            <div class="relative container mx-auto px-6 py-12 flex flex-col items-center justify-center h-full text-center text-white">
                <h1 class="text-3xl md:text-4xl font-bold mb-4 leading-tight">Experience Unforgettable Events in 2024</h1>
                <p class="text-md md:text-lg mb-6">Explore a diverse range of events that cater to all interests. Whether you're looking to network, learn, or simply have fun, we've got you covered!</p>
                <button class="appLandingBTN">Button</button>

            </div>
        </section>

        <section class="bg-gray-50 py-5">
            <h2 class="text-5xl font-extrabold text-center mb-12 text-gray-800">Upcoming Events</h2>
            <div class="max-w-4xl mx-auto grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                @if (events == null)
                {
                    <p><em>Loading...</em></p>
                }
                else if (events.Count == 0)
                {
                    <p><em>No upcoming events</em></p>
                }
                else
                {
                    @foreach (var eventItem in events)
                    {
                        <div class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform transform hover:scale-105 flex flex-col">
                            @* <img src="@eventItem.Image" alt="@eventItem.EventName" class="w-full h-40 object-cover"> *@
                            <div class="p-6 flex flex-col flex-grow">
                                <h3 class="text-2xl font-semibold mb-2">@eventItem.EventName</h3>
                                <p class="text-gray-600 mb-2">Date: @eventItem.EventDate.ToString("d MMM yyyy")</p>
                                <p class="text-gray-600 mb-2">Location: @eventItem.Location</p>
                                <p class="text-gray-600 mb-2">Time: @eventItem.EventTime</p>
                                <p class="text-gray-600 mb-4">Available Seats: @eventItem.AvailableSeats</p>
                                <p class="text-gray-700 flex-grow">@eventItem.Description</p>
                                <button @onclick="() => BookEvent(eventItem.EventId)" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out mt-4">
                                    Book Now
                                </button>
                            </div>
                        </div>
                    }
                }
            </div>  
        </section>




        <section class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-8">Why Choose Us?</h2>
            <div class="flex flex-wrap justify-center gap-8">
                <div class="max-w-xs bg-white shadow-lg rounded-lg p-6">
                    <h3 class="text-2xl font-semibold mb-2">Easy Registration</h3>
                    <p>Register for events with just a few clicks.</p>
                </div>
                <div class="max-w-xs bg-white shadow-lg rounded-lg p-6">
                    <h3 class="text-2xl font-semibold mb-2">Secure Payments</h3>
                    <p>Ensure your transactions are safe and secure.</p>
                </div>
                <div class="max-w-xs bg-white shadow-lg rounded-lg p-6">
                    <h3 class="text-2xl font-semibold mb-2">Real-Time Updates</h3>
                    <p>Stay informed with real-time event updates.</p>
                </div>
            </div>
        </section>
    </main>

